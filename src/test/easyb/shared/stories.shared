
shared_behavior "locale dependent story", {

    before "set the locale to en", {
        then "first backup the locale", {
            origLocale = Locale.getDefault()
        }
        
        and "set the locale to en", {
            Locale.setDefault(Locale.ENGLISH)
        }
    }
    
    after "restore the locale",{
        then "restore the locale", {
            Locale.setDefault(origLocale)
        }
    }

}

